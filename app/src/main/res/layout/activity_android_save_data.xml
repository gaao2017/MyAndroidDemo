<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gao.myandroiddemo.activity.AndroidSaveDataActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_file_data"
        style="@style/button_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件保存数据"/>
     <TextView
        android:id="@+id/tv_sp_data"
        style="@style/button_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="利用SP保存数据"/>
     <TextView
        android:id="@+id/tv_db_data"
        style="@style/button_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="利用DB数据库保存数据"/>

</LinearLayout>
